<?php

class connect
{

var $con;
function constring()
{

$con=mysql_connect(
  $server = getenv('MYSQL_DB_HOST'),
  $username = getenv('MYSQL_USERNAME'),
  $password = getenv('MYSQL_PASSWORD'));
if(!$con)
{
die('Error'.mysql_error);
}
mysql_select_db(getenv('MYSQL_DB_NAME'));
return $con;
}


}



?>